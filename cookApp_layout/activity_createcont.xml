<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".createCont">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:background="#C8C7C3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="레시피 이름"
                android:textSize="15dp">
            </TextView>
            <EditText
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:hint="예) 김치찌개">
            </EditText>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:paddingTop="70dp"
                android:paddingBottom="70dp"
                android:paddingRight="70dp"
                android:paddingLeft="70dp">
                <ImageView
                    android:id="@+id/ibimg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/camera"
                    android:onClick="getimg">
                </ImageView>
            </LinearLayout>
            <ImageView
                android:id="@+id/testimg"
                android:layout_width="match_parent"
                android:layout_height="200dp">
            </ImageView>
            <TextView
                android:background="#C8C7C3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="요리 설명"
                android:textSize="15dp">
            </TextView>
            <EditText
                android:id="@+id/cont"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:padding="10dp"
                android:hint=" 예) 한국인의 소울푸드!"
                android:background="@null">
            </EditText>

            <TextView
                android:background="#C8C7C3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="필요 재료"
                android:textSize="15dp">
            </TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ListView
                    android:id="@+id/ingre"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </ListView>
                <Button
                    android:backgroundTint="#B1FD6B"
                    android:text="재료 추가"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:onClick="addingreList">
                </Button>
            </LinearLayout>

            <Button
                android:text="edittext 보기"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:onClick="show_testlist">
            </Button>
            <TextView
                android:text="초기 텍스트"
                android:id="@+id/exedtx"
                android:layout_width="match_parent"
                android:layout_height="200dp">
            </TextView>

            <TextView
                android:background="#C8C7C3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="필요 양념"
                android:textSize="15dp">
            </TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ListView
                    android:id="@+id/season"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </ListView>
                <Button
                    android:backgroundTint="#B1FD6B"
                    android:text="양념 추가"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:onClick="addseasonList">
                </Button>
            </LinearLayout>

            <TextView
                android:background="#C8C7C3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="요리 순서"
                android:textSize="15dp">
            </TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/sequence"
                    android:overScrollMode="never"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </androidx.recyclerview.widget.RecyclerView>
                <Button
                    android:backgroundTint="#B1FD6B"
                    android:text="순서 추가"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:onClick="addsequenceList">
                </Button>
            </LinearLayout>
            <Button
                android:text="텍스트 이미지 출력"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:onClick="testtxtimg">
            </Button>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <TextView
                    android:id="@+id/txtimg_tx"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center">
                </TextView>
<!--                <ImageView-->
<!--                    android:id="@+id/txtimg_iv2"-->
<!--                    android:layout_weight="1"-->
<!--                    android:layout_width="0dp"-->
<!--                    android:layout_height="match_parent">-->
<!--                </ImageView>-->
                <ImageView
                    android:id="@+id/txtimg_iv"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                </ImageView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="600dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/aa1"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="300dp">
                    </ImageView>
                    <ImageView
                        android:id="@+id/aa2"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="300dp">
                    </ImageView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/aa3"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="300dp">
                    </ImageView>
                    <ImageView
                        android:id="@+id/aa4"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="300dp">
                    </ImageView>
                </LinearLayout>
            </LinearLayout>
            <Button
                android:id="@+id/bb1"
                android:text="AA테스트"
                android:layout_width="match_parent"
                android:layout_height="100dp">
            </Button>

            <TextView
                android:id="@+id/tv1"
                android:layout_width="match_parent"
                android:layout_height="200dp">
            </TextView>
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>